BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: miles
            text: '1'
            multiline: False
            on_text_validate: app.handle_calculate()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.change_counter(1)
                on_release: app.handle_calculate()
            Button:
                text: 'Down'
                on_press: app.change_counter(-1)
                on_release: app.handle_calculate()
#    Button:
#        text: 'Convert'
#        on_press: app.handle_calculate()

    Label:
        id: output_label
        text: '10'
        color: (1, 1, 0, 1)

